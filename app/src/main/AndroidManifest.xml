<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.flinders.crcapp">

<uses-permission android:name="android.permission.CAMERA"/>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-feature android:name="android.hardware.camera2.full"/>

<application
        android:name="edu.flinders.crcapp.CRCApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
    <activity android:name="edu.flinders.crcapp.view.impl.MainActivity"
              android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.IntroActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.CalibrationActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.RecordActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.ReviewActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.HelpActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.ContactActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.CameraActivity"
              android:screenOrientation="portrait">
    </activity>

    <activity android:name="edu.flinders.crcapp.view.impl.AdvanceSettingActivity"
              android:screenOrientation="portrait">
    </activity>
</application>
</manifest>

