<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                tools:context=".view.impl.IntroActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorPrimaryDark"
            app:sv_selectedTextColor="@color/colorPrimaryDark"
            app:sv_stepLineWidth="2dp"
            app:sv_stepPadding="10dp"
            app:sv_nextTextColor="@android:color/darker_gray"
            app:sv_nextStepLineColor="@android:color/darker_gray"
            app:sv_doneCircleColor="@color/colorPrimaryDark"
            app:sv_doneStepLineColor="@color/colorPrimaryDark"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@android:color/white"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@android:color/white"
            app:sv_stepNumberTextSize="18sp"
            app:sv_textSize="22sp"
            app:sv_animationType="All"
            app:sv_stepsNumber="3"
            app:sv_steps="@array/steps"
            app:sv_doneTextColor="@android:color/darker_gray"/>

</RelativeLayout>
